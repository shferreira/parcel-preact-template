{
  "license": "MIT",
  "scripts": {
    "serve": "parcel app/index.html --open",
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache",
    "deploy": "yarn rebuild && echo '/* /index.html 200' >| dist/_redirects && netlify -p dist",
    "clean": "rimraf dist .cache",
    "lint": "eslint app/*.js* app/**/*.js*",
    "test": "jasmine"
  },
  "dependencies": {
    "preact": "^8.3.1",
    "tachyons": "^4.11.1",
    "unfetch": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-react-jsx": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "parcel-bundler": "^1.10.3",
    "parcel-plugin-inliner": "^1.0.2",
    "parcel-plugin-purifycss": "^1.0.2",
    "stylus": "^0.54.5"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-html": "^4.0.6",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "jasmine": "^3.3.0",
    "preact-render-to-string": "^4.1.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:react/recommended",
      "plugin:promise/recommended",
      "plugin:fp/recommended"
    ],
    "plugins": [
      "react",
      "promise",
      "no-loops",
      "fp"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "import/no-unresolved": [
        "off"
      ]
    }
  }
}
